<div class="d-flex justify-content-center my-3">
  <%= form_tag purchases_path, multipart: true, class: 'd-flex' do %>
    <div class="form-group me-2 mb-0">
      <%= file_field_tag :file, accept: '.tab', class: 'form-control-file' %>
    </div>
    <%= submit_tag "Upload", class: 'btn btn-primary' %>
  <% end %>
</div>
